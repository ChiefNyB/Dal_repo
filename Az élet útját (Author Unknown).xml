<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2020-02-28T13:53:31">
  <properties>
    <titles>
      <title>Az élet útját</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Az élet útját<br/>* mutatod, Uram, nékem.</lines>
    </verse>
    <verse name="v2">
      <lines>Ragyogtasd ránk, Uram,<br/>* arcod fényességét!</lines>
    </verse>
    <verse name="v3">
      <lines>Magasztallak, Uram,<br/>* mivel megmentettél engem.</lines>
    </verse>
  </lyrics>
</song>
