  <properties>
    <titles>
      <title>Otthonom lesz az Isten háza</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="31"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Otthonom lesz az Isten háza<br/>* mindörökké, szünet nélkül.</lines>
    </verse>
    <verse name="v2">
      <lines>Áraszd ránk irgalmadat, Urunk,<br/>* hogy mindenkor ujjongjunk.</lines>
    </verse>
    <verse name="v3">
      <lines>Az Úr megmutatta üdvösségét,<br/>* a nemzetek színe előtt.</lines>
    </verse>
  </lyrics>
</song>
