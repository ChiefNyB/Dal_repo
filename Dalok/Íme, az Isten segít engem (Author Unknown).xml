    <titles>
      <title>Íme, az Isten segít engem</title>
    </titles>
    <verseOrder>v1 v2</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
    <songbooks>
      <songbook name="Dicsérjétek az Urat!" entry="386"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Íme, az Isten segít engem,<br/>s az Úr az én lelkem oltalmazója,<br/>áldozok néki szabad akaratból.</lines>
    </verse>
    <verse name="v2">
      <lines>Vigyázz reánk, Urunk, mint szemed fényére,<br/>(*)<br/>szárnyaidnak árnyéka alatt oltalmazz minket!</lines>
    </verse>
  </lyrics>
</song>
