    <titles>
      <title>Légy oltalmazó sziklám</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="12"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Légy oltalmazó sziklám,<br/>* én Uram, Istenem!</lines>
    </verse>
    <verse name="v2">
      <lines>Örvendjetek Istennek,<br/>* a mi segítőnknek!</lines>
    </verse>
    <verse name="v3">
      <lines>Menjetek el az egész világra,<br/>* és hirdessétek az evangéliumot.</lines>
    </verse>
  </lyrics>
</song>
