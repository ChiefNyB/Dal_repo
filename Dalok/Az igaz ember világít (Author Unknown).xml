  <properties>
    <titles>
      <title>Az igaz ember világít</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="8"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Az igaz ember világít,<br/>* mint fény a sötétségben.</lines>
    </verse>
    <verse name="v2">
      <lines>Dicsérjétek az Urat,<br/>* aki a megtört szívűeket meggyógyítja.</lines>
    </verse>
    <verse name="v3">
      <lines>Angyalaid előtt zsoltárt éneklek,<br/>* magasztallak téged, Istenem.</lines>
    </verse>
  </lyrics>
</song>
