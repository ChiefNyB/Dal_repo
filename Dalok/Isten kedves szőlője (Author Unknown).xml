  <properties>
    <titles>
      <title>Isten kedves szőlője</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="30"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Isten kedves szőlője<br/>* az ő választott népe.</lines>
    </verse>
    <verse name="v2">
      <lines>Életünknek minden napját,<br/>* Isten áldása kísérje!</lines>
    </verse>
    <verse name="v3">
      <lines>Bár hallgatnátok ma Isten szavára,<br/>* „Népem, ne légy kemény szívű.”</lines>
    </verse>
  </lyrics>
</song>
