  <properties>
    <titles>
      <title>Örökké tart, Uram, a te</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
    <songbooks>
      <songbook name="Zsoltár - vasárnapok" entry="24"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Örökké tart, Uram, a te irgalmad:<br/>* ne vesd meg kezed alkotásait!</lines>
    </verse>
    <verse name="v2">
      <lines>Ízleljétek és lássátok,<br/>* milyen édes az Úr!</lines>
    </verse>
    <verse name="v3">
      <lines>Menjetek el az egész világra,<br/>* és hirdessétek az evangéliumot!</lines>
    </verse>
  </lyrics>
</song>
