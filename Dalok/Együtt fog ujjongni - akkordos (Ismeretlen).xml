<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 3.1.1" modifiedIn="OpenLP 3.1.1" modifiedDate="2025-03-10T16:41:19">
  <properties>
    <titles>
      <title>Együtt fog ujjongni - akkordos</title>
    </titles>
    <authors>
      <author>Ismeretlen</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1a">
      <lines>H7----------------Em------------<br/>Együtt fog ujjongni fiatal és öreg is,</lines>
    </verse>
    <verse name="v1b">
      <lines>Am--------------------H7<br/>Örömében táncot lej a lány!</lines>
    </verse>
    <verse name="v1c">
      <lines>H7-Em-Am-H7<br/>Náj-ná-ná-náj</lines>
    </verse>
    <verse name="p1a">
      <lines>H7-------Am7---------H7--<br/>Gyászukat ünnepre fordítom,</lines>
    </verse>
    <verse name="p1b">
      <lines>---H7--Am7--------H7<br/>És nem búsulnak ezután!</lines>
    </verse>
    <verse name="c1a">
      <lines>Am----------D-----------G<br/>Vidámmá teszem a szívüket,</lines>
    </verse>
    <verse name="c1b">
      <lines>-----Em----------Am---H7--------Em-E<br/>Hogy örvendezzenek, a bánatuk helyett!</lines>
    </verse>
  </lyrics>
</song>
