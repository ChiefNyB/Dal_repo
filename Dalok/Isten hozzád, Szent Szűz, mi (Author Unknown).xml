      <title>Isten hozzád, Szent Szűz, mi</title>
    </titles>
    <verseOrder>v1</verseOrder>
    <authors>
      <author>Author Unknown</author>
    </authors>
    <songbooks>
      <songbook name="Harmatozzatok, egek!" entry="206"/>
