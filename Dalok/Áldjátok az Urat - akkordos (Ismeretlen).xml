<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 3.1.1" modifiedIn="OpenLP 3.1.1" modifiedDate="2025-03-10T16:41:09">
  <properties>
    <titles>
      <title>Áldjátok az Urat - akkordos</title>
    </titles>
    <authors>
      <author>Ismeretlen</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1a">
      <lines>Em----------Am<br/>Áldjátok az Urat</lines>
    </verse>
    <verse name="v1b">
      <lines>D7-----------Gmaj7<br/>Áldjátok szent nevét!</lines>
    </verse>
    <verse name="v1c">
      <lines>---Cmaj7----------D------<br/>Kik házában álltok napról napra,</lines>
    </verse>
    <verse name="v1d">
      <lines>Hm------------------Em<br/>Dicsérjétek szüntelen Őt!</lines>
    </verse>
    <verse name="c1a">
      <lines>E7-----------Am----D7----Gmaj7<br/>Tárjátok kezeitek az élő Isten felé!</lines>
    </verse>
    <verse name="c1b">
      <lines>Am--------------Em-----------<br/>Áldjon meg téged Sionból az Úr,</lines>
    </verse>
    <verse name="c1c">
      <lines>D------------Hm----Em<br/>Ragyogtassa arcát reád!</lines>
    </verse>
  </lyrics>
</song>
