  <properties>
    <titles>
      <title>Együtt fog újjongni</title>
    </titles>
    <verseOrder>v1 p1 c1</verseOrder>
    <authors>
      <author>ismeretlen szerző</author>
    </authors>
    <songbooks>
      <songbook name="Sárga könyv" entry="46"/>
      <songbook name="Kék könyv" entry="328B"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="i1">
      <lines>Láj láj láj…</lines>
    </verse>
    <verse name="v1">
      <lines>Együtt fog ujjongni fiatal és öreg is,<br/>és örömében táncot lejt a lány.</lines>
    </verse>
    <verse name="c1">
      <lines>Vidámmá teszem a szívüket, hogy örvendezzenek a bánatuk helyett.</lines>
    </verse>
    <verse name="p1">
      <lines>Gyászukat ünnepre fordítom, s nem búsulnak ezután.</lines>
    </verse>
  </lyrics>
</song>
