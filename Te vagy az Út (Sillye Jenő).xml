  <properties>
    <titles>
      <title>Te vagy az Út</title>
    </titles>
    <verseOrder>v1 c1</verseOrder>
    <authors>
      <author>Sillye Jenő</author>
    </authors>
    <songbooks>
      <songbook name="Sárga könyv" entry="164"/>
      <songbook name="Kék könyv" entry="210"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Te vagy az út, az igazság,<br/>Te vagy az élet!<br/>Hozzád megyek áldom Neved,<br/>általad élek.</lines>
    </verse>
    <verse name="c1">
      <lines>Megszabadítottál,<br/>kenyeret s bort adtál.<br/>Tested és véred táplál,<br/>hűséged éltet, alleluja!</lines>
    </verse>
  </lyrics>
</song>
